{{ form_start(form, {'action': form_action}) }}

    <div class="modal-header">
        <h5 class="modal-title">{{ title }}</h5>
        <button type="button" data-bs-dismiss="modal" class="btn-close" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        {{ form_row(form.description) }}
        {{ form_row(form.startDate) }}
        {{ form_row(form.dueDate) }}
        {{ form_row(form.nextAction) }}
    </div>

    <div class="modal-footer d-flex justify-content-between">
        <div></div>
        <div>
            <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">Close</button>
            {% if app.request.get("_route") ends with "_edit" %}
                <button type="button" onclick="location.href='{{ path("app_action_delete", { "id": action.id }) }}';" class="btn btn-danger">Delete</button>
            {% endif %}
            
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>

{{ form_end(form) }}