{% extends '_lib/base/base.html.twig' %}

{% block title %}Notes{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between border-bottom mb-2">
        <h4 class="mb-0 pt-1">All notes</h4>

        <div class="btn-toolbar">
            <button id="from_note_new_note" type="button" class="btn btn-sm btn-outline-secondary mb-2">
                Add note
            </button>
        </div>
    </div>

    <div class="card">
        <div class="fixedTable">
            <table class="table table-striped table-hover" id="noteTable">
                <thead>
                    <tr>
                        <th>Content</th>
                        <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                        <th>DeletedAt</th>
                        <th>ProcessedAt</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for note in notes %}
                    <tr data-id="{{ note.id }}">
                        <td class="text-truncate" style="max-width: 200px;">{{ note.content }}</td>
                        <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ note.updatedAt ? note.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ note.deletedAt ? note.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ note.processedAt ? note.processedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_note_show', {'id': note.id}) }}">show</a>
                            <a href="{{ path('app_note_edit', {'id': note.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div id="noteView" class="card mt-2">
    </div>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            activateTable("noteTable");
        }, false);

    </script>

{% endblock %}
