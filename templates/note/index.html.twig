{% extends '_lib/base/base.html.twig' %}

{% block title %}Notes{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between border-bottom mb-2">
        <h4 class="mb-0 pt-1">All notes</h4>

        <div class="btn-toolbar">
            <button id="from_note_new_note" type="button" class="btn btn-sm btn-outline-secondary mb-2 me-2">Add note</a></button>
            <button id="btn_sort_notes"     type="button" class="btn btn-sm btn-outline-secondary mb-2 gap-1 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-arrow-down-up"></i>
                Sort
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Content</a></li>
                <li><a class="dropdown-item" href="#">Created</a></li>
                <li><a class="dropdown-item" href="#">Updated</a></li>
                <li><a class="dropdown-item" href="#">Deleted</a></li>
            </ul>

        </div>
    </div>
    <div class="card">
        <div class="fixedTable">
            <table id="noteTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Content</th>
                        <th>CreatedAt</th>
                    </tr>
                </thead>
                <tbody>
                {% for note in notes %}
                    <tr class="data-row" data-id="{{ note.id }}">
                        <td class="text-truncate" style="max-width: 600px;">{{ note.content }}</td>
                        <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div id="noteView" class="card mt-2">
    </div>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            activateTable("noteTable");

            {% if selected %}
                document.querySelectorAll('[data-id="{{ selected }}"]')[0].click();
            {% endif %}
        }, false);

    </script>

{% endblock %}
